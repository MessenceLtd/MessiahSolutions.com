<div class="rd-navbar-brand">
    <a class="brand-name" href="@site.Url()">
        <img class="logo-default" src="/images/logo/company-logo.png" alt="" width="80" height="60" />
        @*<img class="logo-inverse" src="/images/logo-inverse-198x42.png" alt="" width="198" height="42" />*@
    </a>
</div>

<div class="rd-navbar-nav-wrap">

    <ul class="rd-navbar-nav">
        <li class="@(Model.Url() == site.Url() ? "active" : null)"><a href="@site.Url()">Home</a></li>
        @foreach (var item in selection)
        {
            <li class="@(item.IsAncestorOrSelf(Model) ? "active" : null)">
                <a href="@item.Url()">@item.Name</a>

                @if (item.Children.Where(x => x.IsVisible()).Count() > 0)
                {
                    <ul class="rd-navbar-dropdown">
                        @foreach (var childLevel2 in item.Children.Where(x => x.IsVisible()))
                        {
                            <li class="@(childLevel2.IsAncestorOrSelf(Model) ? "active" : null)"><a href="@childLevel2.Url()">@childLevel2.Name</a></li>
                        }
                    </ul>
                }

            </li>
        }
    </ul>
</div>


